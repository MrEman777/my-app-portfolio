<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyPortfolioActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:id="@+id/mainLayout">

        <TextView
            android:text="My Nanodegree Apps!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/spotifyButton"
            android:layout_below="@+id/header"
            android:layout_alignLeft="@+id/header"
            android:layout_alignStart="@+id/header"
            android:layout_alignRight="@+id/header"
            android:layout_alignEnd="@+id/header"
            android:background="#F08C35"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/scoresButton"
            android:background="#F08C35"
            android:layout_below="@+id/spotifyButton"
            android:layout_alignLeft="@+id/spotifyButton"
            android:layout_alignStart="@+id/spotifyButton"
            android:layout_alignRight="@+id/spotifyButton"
            android:layout_alignEnd="@+id/spotifyButton"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/libraryButton"
            android:background="#F08C35"
            android:layout_below="@+id/scoresButton"
            android:layout_alignLeft="@+id/scoresButton"
            android:layout_alignStart="@+id/scoresButton"
            android:layout_alignRight="@+id/scoresButton"
            android:layout_alignEnd="@+id/scoresButton"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildButton"
            android:background="#F08C35"
            android:layout_below="@+id/libraryButton"
            android:layout_marginBottom="15dp"
            android:layout_alignLeft="@+id/libraryButton"
            android:layout_alignStart="@+id/libraryButton"
            android:layout_alignRight="@+id/libraryButton"
            android:layout_alignEnd="@+id/libraryButton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:id="@+id/xyzButton"
            android:layout_below="@+id/buildButton"
            android:background="#F08C35"
            android:layout_alignLeft="@+id/buildButton"
            android:layout_alignStart="@+id/buildButton"
            android:layout_alignRight="@+id/buildButton"
            android:layout_alignEnd="@+id/buildButton"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/capstoneButton"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/xyzButton"
            android:layout_alignStart="@+id/xyzButton"
            android:layout_alignRight="@+id/xyzButton"
            android:layout_alignEnd="@+id/xyzButton"
            android:background="#FF002F"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
